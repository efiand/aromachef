{
	"name": "aromachef",
	"type": "module",
	"pre-commit": [
		"lint-format"
	],
	"browserslist": [
		"> 0.2%",
		"last 6 version"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "npm run check && vite build && cross-env AMP=1 vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint-format": "npm run check && eslint . --fix && stylelint **/*.{scss,svelte} --fix && prettier --write .",
		"lint": "npm run check && eslint . && stylelint **/*.{scss,svelte} && prettier --check .",
		"postinstall": "prisma generate && svelte-kit sync",
		"upgrade": "node tools/upgrade"
	},
	"devDependencies": {
		"@fastify/pre-commit": "2.2.0",
		"@prisma/client": "6.3.1",
		"@sveltejs/adapter-node": "5.2.12",
		"@sveltejs/amp": "1.1.4",
		"@sveltejs/kit": "2.17.2",
		"@sveltejs/vite-plugin-svelte": "5.0.3",
		"@types/node": "22.13.4",
		"cross-env": "7.0.3",
		"dayjs": "1.11.13",
		"eslint": "9.20.1",
		"eslint-config-prettier": "10.0.1",
		"eslint-plugin-perfectionist": "4.9.0",
		"eslint-plugin-svelte": "2.46.1",
		"globals": "15.15.0",
		"mime": "4.0.6",
		"postcss-html": "1.8.0",
		"postcss-scss": "4.0.9",
		"postcss-sort-media-queries": "5.2.0",
		"postcss-url": "10.1.3",
		"prettier": "3.5.1",
		"prettier-plugin-svelte": "3.3.3",
		"prisma": "6.3.1",
		"sass-embedded": "1.85.0",
		"stylelint": "16.14.1",
		"stylelint-config-standard": "37.0.0",
		"stylelint-order": "6.0.4",
		"svelte": "5.20.1",
		"svelte-check": "4.1.4",
		"typescript": "5.7.3",
		"typescript-eslint": "8.24.1",
		"vite": "6.1.0"
	}
}
