{
	"dependencies": {
		"@dotenvx/dotenvx": "1.48.3",
		"dompurify": "3.2.6",
		"formidable": "3.5.4",
		"jsdom": "26.1.0",
		"mysql2": "3.14.3",
		"sharp": "0.34.3",
		"typograf": "7.4.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.3",
		"@fastify/pre-commit": "2.2.0",
		"@html-validate/jest-config": "3.13.0",
		"@types/amphtml-validator": "1.0.4",
		"@types/formidable": "3.4.5",
		"@types/jest": "30.0.0",
		"@types/jsdom": "21.1.7",
		"@types/node": "24.1.0",
		"amphtml-validator": "1.0.38",
		"html-validate": "9.7.1",
		"jest": "30.0.5",
		"nodemon": "3.1.10",
		"posthtml-bem-linter": "0.1.7",
		"typescript": "5.8.3"
	},
	"imports": {
		"#!/*": "./public/js/*",
		"#server/*": "./server/*"
	},
	"main": "./server/main.js",
	"name": "aromachef",
	"pre-commit": [
		"lint-format",
		"test"
	],
	"private": true,
	"scripts": {
		"dump": "dotenvx run -- node ./tools/dump.js",
		"dev": "dotenvx run -- nodemon ./server/dev.js",
		"image": "dotenvx run -- node ./tools/images.js",
		"lint": "npm run type-check && biome check",
		"lint-format": "npm run type-check && biome check --write",
		"test": "jest",
		"type-check": "tsc -p ./jsconfig.json",
		"upgrade": "node ./tools/upgrade.js"
	},
	"type": "module"
}
